---
export interface Props {
  title?: string;
}

const { title = 'My Astro Site' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #f9f9f9;
      }

      nav {
        background: #222;
        padding: 1rem;
        position: sticky;
        top: 0;
      }

      nav a {
        color: white;
        text-decoration: none;
        margin-right: 2rem;
        font-weight: 500;
      }

      nav a:hover {
        color: #61dafb;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      footer {
        background: #222;
        color: white;
        text-align: center;
        padding: 2rem 1rem;
        margin-top: 4rem;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
    </nav>

    <div class="container">
      <slot />
    </div>

    <footer>
      <p>&copy; 2026 My Astro Site. Built with Astro.</p>
    </footer>
  </body>
</html>
